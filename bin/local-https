#!/usr/bin/env ruby
# frozen_string_literal: true

$LOAD_PATH.unshift(File.expand_path("../lib", __dir__)) unless $LOAD_PATH.any? { |p| File.expand_path(p) == File.expand_path("../lib", __dir__) }

# When running from the source repo (e.g., CI), load Bundler deps so runtime
# dependencies like 'thor' are available without installing the gem.
begin
  gemfile = File.expand_path("../Gemfile", __dir__)
  require "bundler/setup" if File.exist?(gemfile)
rescue LoadError
  # Ignore if bundler is not available; assume deps are installed globally
end

require "local_https"

LocalHttps::CLI.start(ARGV)
